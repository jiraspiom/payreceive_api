// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Status {
  pending
  completed
  failed
}

model pay {
  id     String   @id @default(cuid())
  text   String
  value  Decimal
  date   DateTime @default(now())
  status Status

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model receive {
  id     String   @id @default(cuid())
  text   String
  value  Decimal
  date   DateTime @default(now())
  status Status

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
